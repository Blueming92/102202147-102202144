<!-- pages/profile/profile.wxml -->
<view class="container">
  <view class="profile">
    <image class="avatar" src="{{user.avatarUrl}}" mode="aspectFill"></image>
    <text class="nickname">{{user.nickname}}</text>
  </view>
  <view class="button-container">
    <button class="nav-btn" bindtap="myPublished">我的发布</button>
    <button class="nav-btn" bindtap="myFavorites">我的收藏</button>
    <button class="nav-btn" bindtap="settings">设置</button>
    <button class="nav-btn" bindtap="feedback">反馈</button>
  </view>
</view>
