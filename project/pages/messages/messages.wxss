.container {
  display: flex;
  flex-direction: column;
}

.message-item {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid #e5e5e5;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin-right: 10px;
}

.content {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.username {
  font-size: 16px;
  color: #333;
}

.last-message {
  font-size: 14px;
  color: #666;
  margin-top: 4px;
}

.time {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.divider {
  height: 10px;
  background-color: #f5f5f5;
}