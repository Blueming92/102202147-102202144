.container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: url('https://img2024.cnblogs.com/blog/3512259/202410/3512259-20241008133810156-1150990692.jpg'); /* 添加背景图片 */
  background-size: cover; /* 背景图片覆盖整个容器 */
  background-position: center; /* 背景图片居中显示 */
}

button {
  padding: 10px 20px;
  font-size: 18px;
  background-color: rgba(255, 255, 255, 0.705); /* 半透明背景 */
  border: none;
  border-radius: 5px;
}
