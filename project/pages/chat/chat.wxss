.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
}

.header {
  font-size: 26rpx;
  font-weight: bold;
  padding: 15rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.message-list {
  flex: 1;
  padding: 10rpx;
  overflow-y: auto;
}

.message {
  max-width: 70%;
  padding: 10rpx;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
}

.message.from-user {
  background-color: #d1e8ff; /* 用户消息背景色 */
  align-self: flex-end; /* 右侧对齐 */
}

.message.from-others {
  background-color: #f1f1f1; /* 其他消息背景色 */
  align-self: flex-start; /* 左侧对齐 */
}

.input-area {
  display: flex;
  align-items: center;
  padding: 10rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.input {
  flex: 1;
  border: 1rpx solid #eaeaea;
  border-radius: 20rpx;
  padding: 10rpx 15rpx;
  margin-right: 10rpx; /* 确保有间距 */
}

.send-button {
  background-color: #007aff; /* 发送按钮背景色 */
  color: white;
  border: none; /* 去掉边框 */
  border-radius: 20rpx;
  padding: 10rpx 20rpx; /* 增加内边距 */
}
